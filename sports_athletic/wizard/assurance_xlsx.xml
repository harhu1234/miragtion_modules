<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="assurance_excel_wizaed_form" model="ir.ui.view">
        <field name="name">assurance.excel.export.form</field>
        <field name="model">assurance.excel.export.wizard</field>
        <field name="arch" type="xml">
            <form>
        		<field name="filename" invisible='1'/>
                <field name="excel_file" filename='filename' readonly='1'/>
                <footer>
                        <button name="assurance_xlsx" string="Télécharger" type="object" class="oe_link oe_right"/>
                        <button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="assurance_excel_wizaed_action" model="ir.actions.act_window">
            <field name="name">Assurance Excel Export</field>
            <field name="res_model">assurance.excel.export.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="assurance_excel_wizaed_form"/>
            <field name="target">new</field>
        </record>
</odoo>