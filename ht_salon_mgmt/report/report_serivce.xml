<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Report Template for Select Attendee Appointment -->
    <template id="report_service">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="row">
                    <div class="col">
                        <center><h1>Services</h1></center>
                    </div>
                </div>
                <br/>
                <t t-foreach="docs" t-as="doc">
                    <div class="page">
                        <div class="row">
                        <strong>Service : </strong> <span t-field="doc.name"/>
                            <br/>
                            <br/>
                        </div>
                        <div class="row">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th name="th_gender">Gender</th>
                                        <th name="th_description">Description</th>
                                        <th name="th_product">Product</th>
                                        <th name="th_category">Category</th>
                                        <th name="th_price">Price</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td><span t-field="doc.service_to"/></td>
                                        <td><span t-field="doc.description"/></td>
                                        <td><span t-field="doc.product_id"/></td>
                                        <td><span t-field="doc.category"/></td>
                                        <td><span t-field="doc.price"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </t>
            </t>
        </t>
    </template>

     <!-- action Service Report -->
     <record id="action_service_report" model="ir.actions.report">
         <field name="name">Service Report</field>
         <field name="model">service.service</field>
         <field name="report_type">qweb-pdf</field>
         <field name="report_name">ht_salon_mgmt.report_service</field>
         <field name="report_file">ht_salon_mgmt.report_service</field>
         <field name="print_report_name">object.name</field>
    </record>



</odoo>