<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="ssc_create_template_form_view">
            <field name="name">ssc.create.template.form</field>
            <field name="model">ssc.create.template</field>
            <field name="arch" type="xml">
                <form string="Templates">
                    <header>
                        <button icon="fa-cogs" string="Apply" name="action_to_apply" type="object" class="oe_highlight" />
                        <field name="state" widget="statusbar" readonly="1" />
                    </header>
                    <sheet>

                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" required="1"/>
                                </h1>
                            <group>
                                <field name="model_id" required="1" options="{'no_create': True}"/>
                            </group>
                        </div>
                        <group colspan="4" col="4">
                            <field name="apply_to_models"/>
                            <field name="apply_models" attrs="{'invisible':[('apply_to_models','=',False)],'required':[('apply_to_models','!=',False)]}" widget="many2many_tags"/>
                            <field name="sample_template"/>
                            <field name="sample_image" attrs="{'invisible':[('sample_template','=',False)],'required':[('sample_template','!=',False)]}" widget="image" style="width:200px;hieght:350px;"/>
                            <field name="applied_models" invisible="1"/>
                        </group>
                        <notebook>
                            <page string="Content">
                                <field name="body" widget="html" options="{'style-inline': true}"/>
                            </page>
                            <page string="Paper Format" >
                                <group colspan="4" col="4">
                                    <field name="format"/>
                                    <field name="orientation" widget="radio"/>
                                    <field name="margin_top"/>
                                    <field name="margin_bottom"/>
                                    <field name="margin_left"/>
                                    <field name="margin_right"/>
                                </group>
                            </page>
                            <page string="Available Fields" attrs="{'invisible':[('model_id','=',False)]}">
                                <group colspan="2" col="2">
                                    <field name="field_ids" required="1" options="{'no_create': True}" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Samples">
                                <group colspan="4" col="4">
                                    <field name="sample_template_id" nolabel="1" />
                                    <field name="checked_sample_image" nolabel="1" attrs="{'invisible':[('sample_template_id','=',False)]}" widget="image" style="width:200px;hieght:350px;"/>
                                </group>
                            </page>
                        </notebook>
                        
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="ssc_create_template_tree_view">
            <field name="name">ssc.create.template.tree</field>
            <field name="model">ssc.create.template</field>
            <field name="arch" type="xml">
                <tree string="Templates">
                    <field name="name"/>
                    <field name="model_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="ssc_create_template_action_view" model="ir.actions.act_window">
            <field name="name">Templates</field>
            <field name="res_model">ssc.create.template</field>
            <field name="context">{'group_by': ['model_id']}</field>
            <field name="domain">[]</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new Template
                </p>
            </field>
        </record>

    </data>
</odoo>
