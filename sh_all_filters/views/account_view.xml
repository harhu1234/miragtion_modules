<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Vendor Bills Filters -->
	<record id="sh_inherit_view_account_invoice_filter" model="ir.ui.view">
		<field name="name">sh.inherit.view.account.invoice.filter</field>
		<field name="model">account.move</field>
		<field name="inherit_id" ref="account.view_account_invoice_filter"/>
		<field name="arch" type="xml">
			<xpath expr="//filter" position="before">
			
				<filter string="Today" name="today" 
					domain="[('invoice_date', '&gt;=', datetime.datetime.now().strftime('%m/%d/%Y 00:00:00')),('invoice_date', '&lt;=', datetime.datetime.now().strftime('%m/%d/%Y 23:23:59'))]"/>
			
			     <filter string="Yesterday"  name="Yesterday" 
                         domain="[('invoice_date','&gt;=', ((context_today()+datetime.timedelta(days=-1)).strftime('%Y-%m-%d'))), ('invoice_date','&lt;=', ((context_today()+datetime.timedelta(days=-1)).strftime('%Y-%m-%d')))]"
                           help="Yesterday"/>				

				<filter 
			        string="Current Week"
			        name="this_week"
			        domain="[('invoice_date', '&gt;=', ((context_today()+ relativedelta(weeks=-1,weekday=0)).strftime('%Y-%m-%d'))), ('invoice_date', '&lt;=', ((context_today()+ relativedelta(weeks=-1,days=5,weekday=6)).strftime('%Y-%m-%d')))]"
			       /> 				

				
				<filter string="Previous Week" name="prev_week"
				domain="[('invoice_date', '&gt;=', ((context_today()+relativedelta(weeks=-2, weekday=0)).strftime('%Y-%m-%d'))),('invoice_date', '&lt;=', ((context_today()+relativedelta(weeks=-1,weekday=6)).strftime('%Y-%m-%d')))]"/>
	
				<filter string="Current Month" name="this_month" 
				domain="[('invoice_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('invoice_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>				
	
				<filter string="Previous Month" name="prev_month" domain="[('invoice_date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%%Y-%%m-01')),('invoice_date','&lt;',time.strftime('%%Y-%%m-01'))]"/>

			    <filter string="Current Year" name="year" domain="[('invoice_date','&lt;=', time.strftime('%%Y-12-31')),('invoice_date','&gt;=',time.strftime('%%Y-01-01'))]"/>

				<filter string="Previous Year" name="previous_year" domain="[('invoice_date', '&gt;=' ,(context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('invoice_date','&lt;=',time.strftime('%Y-01-01'))]" help="last year"/>
				
			</xpath>
			
			 <xpath expr="//group" position="inside">
                  <filter string="Day" name="day" domain="[]" context="{'group_by':'invoice_date:day'}"/>		
                  <filter string="Week" name="week" domain="[]" context="{'group_by':'invoice_date:week'}"/>		 
                  <filter string="Month" name="month" domain="[]" context="{'group_by':'invoice_date:month'}"/>
                  <filter string="Year" name="year" domain="[]" context="{'group_by':'invoice_date:year'}"/>                                                       
			 </xpath>			
			
		</field>
	</record>


