<odoo>
  <data >
    <record id="account_invoice_temp_3_template" model="ssc.create.template">
      <field name="name">Customer Invoice Modern Template (2)</field>
      <field name="sample_template">True</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_14.png"/>
      <field model="ir.model" name="model_id" search="[('model', '=', 'account.move')]"/>
      <field name="body" type="html">
        <div width="100%" >

          <!-- """ header""" -->
          <div style="width:100%;height:40px;color:#ffffff;background-color:#862d86;margin-bottom: 20px;">
            <center>
              <b style="font-size:30px;">
                Invoice __
                #NO 
                ${object.name}
              </b>
            </center>
          </div>
          <br></br><br></br><br></br>

          <!-- """ Customer Info """ -->

          <div style="width:50%;height:40px;color:#ffffff;background-color:#862d86;margin-bottom: 20px;">
            <b style="font-size:22px;">
              Customer Info
            </b>
          </div>
          <table style="width:65%;">
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Name : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Address : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.street} , 
                  ${object.partner_id.city} , 
                  ${object.partner_id.country_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Phone : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.phone}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Email : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.email}
                </n>
              </td>
            </tr>
          </table>
          <br></br><br></br>

          <!-- """ End Of Customer Info """ -->

          <!-- """ Company Info """ -->

          <div style="width:50%;height:40px;color:#ffffff;background-color:#862d86;margin-bottom: 20px;">
            <b style="font-size:22px;">
              Company Info
            </b>
          </div>
          <table style="width:65%;">
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Name : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.user_id.partner_id.company_name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Address : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.user_id.partner_id.street} , 
                  ${object.user_id.partner_id.city} , 
                  ${object.user_id.partner_id.country_id.name}
                </n>
              </td>
            </tr>
          </table>
          <br></br><br></br><br></br>

          <!-- """ End Of Shipping Info """ -->

          <!-- """ details table """ -->

          <div style="width:50%;height:40px;color:#ffffff;background-color:#862d86;margin-bottom: 20px;">
            <b style="font-size:22px;">
              Products Details
            </b>
          </div>
          <table style="width:100%;">
            <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;background-color: #e6b3e6 ! important;">
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Product
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Description
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Quantity
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Unit Price
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Taxes
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Subtotal
                </b>
              </td>
            </tr>
            % for line in object.invoice_line_ids:
              <tr style="width:100%;border-bottom: 1px solid black;border-color:#ccccb3 ! important;">
                <td>
                  <n style="font-size:14px;">
                    ${line.product_id.name}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.name}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.product_uom_qty}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.price_unit}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.tax_ids.name}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.price_subtotal}
                  </n>
                </td>
              </tr>
            % endfor
          </table>
          <br></br><br></br><br></br>

          <!-- """ end details table """ -->

          <!-- """ Total Info """ -->

          <table style="width:35%;float:right;">
            <tr style="width:100%;height:40px;color:#ffffff;background-color:#862d86;margin-bottom:20px;">
              <td style="width:30%;">
                <b style="font-size:22px;">
                  Total
                </b>
              </td>
              <td style="width:70%;">
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:60%;">
                <b style="font-size:16px;">
                  Untaxed Amount : 
                </b>
              </td>
              <td style="width:40%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.amount_untaxed}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:30%;">
                <b style="font-size:16px;">
                  Taxes : 
                </b>
              </td>
              <td style="width:70%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.amount_tax}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:30%;">
                <b style="font-size:16px;">
                  Total : 
                </b>
              </td>
              <td style="width:70%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.amount_total}
                </n>
              </td>
            </tr>
          </table>

        </div>
      </field>
    </record>
  </data>
</odoo>