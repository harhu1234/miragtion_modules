<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--Kanban view of offer service-->
        <record id="search_kanban_view" model="ir.ui.view">
            <field name="name">offer.service.kanban.view</field>
            <field name="model">offer.service</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="image" widget="image"/>
                                </div>
                                <div class="o_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    <field name="name"/><br/>
                                    <field name="start_date"/><br/>
                                    <field name="end_date"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!--End Kanban View-->

        <!-- Search view of Offer Service -->
        <record id="offer_service_search_view" model="ir.ui.view">
            <field name="name">offer.service.search</field>
            <field name="model">offer.service</field>
            <field name="arch" type="xml">
                <search>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <filter string="Last weeks" name="last_weeks" domain="['&amp;',('start_date', '&gt;=', (context_today() + relativedelta(weeks=-1,days=1,weekday=0)).strftime('%Y-%m-%d')),('end_date', '&lt;=', (context_today() + relativedelta(weekday=6)).strftime('%Y-%m-%d'))]"/>
                </search>
            </field>
        </record>

        <!--Calendar View of Offer service-->
        <record id="offer_service_calendar_view" model="ir.ui.view">
            <field name="name">offer.service.calendar.view</field>
            <field name="model">offer.service</field>
            <field name="arch" type="xml">
                <calendar string="Offer Service" date_start="start_date" date_stop="end_date" mode="month" color="name" quick_add="False">
                    <field name="name"/>
                </calendar>
            </field>
        </record>
        <!-- End Calendar view-->

        <!--Form view of offer service-->
        <record id="offer_service_form_view" model="ir.ui.view">
            <field name="name">offer.service.form.view</field>
            <field name="model">offer.service</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="send_offer_email" type="object" string="Send mail" class="oe_highlight"/>
                        <field name="state" widget="statusbar" clickable="1"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box">
                            <button class="oe_stat_button" name="action_count_service" type="object" icon="fa-list-alt" context="{'service':service_ids}">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="service_count"/></span>
                                    <span class="o_stat_text"> Services</span>
                                </div>
                            </button>
                        </div>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                            <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="service_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="type"/>
                                <field name="service_price"/>
                                <field name="offer_price"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--Tree view of offer service-->
        <record id="offer_service_tree_view" model="ir.ui.view">
            <field name="name">offer.service.tree.view</field>
            <field name="model">offer.service</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <field name="offer_price"/>
                    <field name="service_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <!--End Tree view-->

        <!--Action of offer service view-->
        <record id="action_offer_view" model="ir.actions.act_window">
            <field name="name">Offers</field>
            <field name="res_model">offer.service</field>
            <field name="view_mode">calendar,kanban,tree,form</field>
        </record>
        <!-- End Action -->
    </data>
</odoo>