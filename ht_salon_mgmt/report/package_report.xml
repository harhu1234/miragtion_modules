<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
        <!-- Report Template for All Package -->
        <template id="report_package">
            <t t-call="web.html_container">
                <t t-call="web.external_layout">
                    <div class="row">
                        <div class="col">
                            <center><h1>Pacakge</h1></center>
                        </div>
                    </div>
                    <br/>
                    <t t-foreach="docs" t-as="doc">
                        <div class="page">
                            <div class="row">
                            <strong>Package : </strong> <span t-field="doc.name"/>
                                <br/>
                                <br/>
                            </div>
                            <div class="row">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th name="th_type">Type</th>
                                            <th name="th_service">Service</th>
                                            <th name="th_description">Description</th>
                                            <th name="th_price">Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <t t-foreach="doc.line_ids" t-as="service">
                                            <tr>
                                                <td><span t-field="doc.package_type"/></td>
                                                <td><span t-field="service.service_id"/></td>
                                                <td><span t-field="service.description"/></td>
                                                <td><span t-field="service.price"/></td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>

    <record id="action_package_report" model="ir.actions.report">
        <field name="name">Pacakge Report</field>
        <field name="model">pacakge.package</field>
        <field name="report_name">ht_salon_mgmt.report_package</field>
        <field name="report_file">ht_salon_mgmt.report_package</field>
        <field name="print_report_name">object.name</field>
    </record>
</odoo>