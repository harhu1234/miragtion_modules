<?xml version="1.0" encoding="utf-8" ?>

<odoo>
   <data noupdate="1">
       <!--Email template -->
       <record id="template_appointment_email" model="mail.template">
           <field name="name">Appointment Email Template</field>
           <field name="model_id" ref="ht_salon_mgmt.model_customer_appointment"/>
           <field name="email_from">{{object.customer_id.company_id and object.customer_id.company_id.email or ''}}</field>
           <field name="email_to" >{{object.customer_id.email}}</field>
           <field name="subject">Your Appointment Is Confirmed</field>
           <field name="auto_delete" eval="True"/>
           <field name="lang">{{object.customer_id.lang}}</field>
           <field name="body_html" type="html">
                <p>Hi <t t-out="object.customer_id.name"/>,</p>
                <br/>
                <p>Your appointment is confirmed for <t t-out="object.schedue_time"/>.</p>
                <p>To make changes to your appointment, call us <t t-out="object.customer_id.company_id.phone"/>, or respond to this email.</p>
                <p>Thanks for booking with <t t-out="object.customer_id.company_id.name"/>!</p>
                <br/>
           </field>
       </record>
   </data>
</odoo>