<odoo>
  <data >
    <record id="partner_modern_temp" model="ssc.create.template">
      <field name="name">Partner Modern Template</field>
      <field name="sample_template">True</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_6.png"/>
      <field model="ir.model" name="model_id" search="[('model', '=', 'res.partner')]"/>
      <field name="body" type="html">
        <div width="100%" >

          <b style="font-size:26px;">
            Contact Information
          </b>
          <br></br><br></br>

          <!-- start Personal Info -->

          <div style="width:90%;height:40px;color:#ffffff;background-color:#1a1aff;margin-bottom: 20px;">
            <b style="font-size:22px;">
              Personal Information
            </b>
          </div>
          <table style="width:65%;">
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Name 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Country  
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.country_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Website
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.website}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Tags
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                % for category in object.category_id:
                  <n style="font-size:14px;">
                     ${category.name} - 
                  </n>
                % endfor 
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Phone
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.phone}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Email
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.email}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <table>
                  <tr style="width:100%;">
                    <td style="width:100%;">
                      <b style="font-size:16px;">
                        Address
                      </b>
                    </td>
                  </tr>
                </table>
              </td>
              <td style="width:80%;">
                <table style="width:100%;">
                  <tr style="width:100%;">
                    <td style="width:25%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                         Street
                      </b>
                    </td>
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                         ${object.street}
                      </n>
                    </td>
                    <td style="width:15%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                         City
                      </b>
                    </td>
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                         ${object.city}
                      </n>
                    </td>
                  </tr>
                  <tr style="width:100%;">
                    <td style="width:25%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                         State
                      </b>
                    </td>
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                        ${object.state_id.name}
                      </n>
                    </td>
                    <td style="width:15%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                         ZIP
                      </b>
                    </td>
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                        ${object.zip}
                      </n>
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
          <br></br><br></br>

          <!-- start Personal Info -->

          <!-- start work Info -->

          <div style="width:90%;height:40px;color:#ffffff;background-color:#1a1aff;margin-bottom: 20px;">
            <b style="font-size:22px;">
              Work Information
            </b>
          </div>

          <table style="width:65%;">
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Sales Pay Term 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.property_payment_term_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Purchase Pay Term  
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.property_supplier_payment_term_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Pricelist
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.property_product_pricelist.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Tax ID
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.vat}
                </n>
              </td>
            </tr>
          </table>

          <!-- end work Info -->

        </div>
      </field>
    </record>
  </data>
</odoo>