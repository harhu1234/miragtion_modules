<?xml version="1.0"?>
<odoo>
    <data>
        <!-- Scheduler for CRM Notification-->
        <record forcecreate="True" id="ir_cron_notification" model="ir.cron">
            <field name="name">CRM Notification</field>
            <field name="model_id" ref="model_notification_notification"/>
            <field name="state">code</field>
            <field name="code">model.get_crm_email_notification()</field>
            <field eval="True" name="active" />
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall" />
        </record>
    </data>
</odoo>