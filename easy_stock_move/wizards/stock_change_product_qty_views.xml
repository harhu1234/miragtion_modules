<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="easy_move_type_kanban" model="ir.ui.view">
            <field name="name">stock.picking.type.kanban</field>
            <field name="model">stock.picking.type</field>
            <field name="inherit_id" ref="stock.stock_picking_type_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_manage_new')]" position="inside">
                    <div role="menuitem">
                        <a name="open_quick_transfer_wizard" type="object">Quick Move</a>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_easy_transfer_product_quantity" model="ir.ui.view">
            <field name="name">Move Product Stock</field>
            <field name="model">easy.move.product.wizard</field>
            <field name="priority">1</field>
            <field name="arch" type="xml">
                <form string="Move Product Quantity">
                    <group>
                        <field name="product_tmpl_id" invisible="1"/>
                        <field name="product_variant_count" invisible="1"/>
                        <field name="product_id" widget="selection"
                            domain="[('product_tmpl_id', '=', product_tmpl_id)]"
                            attrs="{'readonly': [('product_variant_count', '=', 1)]}"/>
                    </group>
                    <group string="Transfer">
                        <group>
                            <field name="qunatity_at_source_location" string="Available Quantity"/>
                        </group>
                        <group>
                            <field name="quantity_to_transfer" string="Quantiy to Move"/>
                        </group>
                        
                     </group>
                     <group>
                        <field name="has_tracking" invisible="1"></field>
                        <field name="lot_id" attrs="{'invisible':[('has_tracking','=','none')]}" context="{'search_default_product_id':product_id,'default_product_id':product_id}" groups="stock.group_production_lot"/>
                       </group>
                       <group  colspan="4">
                        <group>
                            <field name="source_location_id" string="Source Location"/>
                        </group>
                        <group>
                            <field name="dest_location_id" string="Destination Location"/>
                        </group>
                    </group>
                    <footer>
                        <button name="transfer_product_qty" string="_Apply" type="object" class="btn-primary"/>
                        <button string="_Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="view_easy_transfer_product_quantity_picking_type" model="ir.ui.view">
            <field name="name">Move Product Stock</field>
            <field name="model">easy.move.product.wizard</field>
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <form string="Move Product Quantity">
                    <group>
                        <field name="product_tmpl_id" invisible="1"/>
                        <field name="product_variant_count" invisible="1"/>
                        <field name="product_id"/>
                    </group>
                    <group string="Transfer">
                        <group>
                            <field name="qunatity_at_source_location" string="Available Quantity"/>
                        </group>
                        <group>
                            <field name="quantity_to_transfer" string="Quantiy to Move"/>
                        </group>
                     </group>
                     <group>
                        <field name="has_tracking" invisible="1"></field>
                        <field name="lot_id" attrs="{'invisible':[('has_tracking','=','none')]}" context="{'search_default_product_id':product_id,'default_product_id':product_id}" groups="stock.group_production_lot"/>
                       </group>
                       <group  colspan="4">
                        <group>
                            <field name="source_location_id" string="Source Location"/>
                        </group>
                        <group>
                            <field name="dest_location_id" string="Destination Location"/>
                        </group>
                    </group>
                    <footer>
                        <button name="transfer_product_qty" string="_Apply" type="object" class="btn-primary"/>
                        <button string="_Cancel" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_move_to_scrap_product_quantity" model="ir.actions.act_window">
            <field name="name">Move Stock</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">easy.move.product.wizard</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_easy_transfer_product_quantity"/>
            <field name="target">new</field>
        </record>
        
        <record id="product_product_view_form_easy_transfer_stock" model="ir.ui.view">
            <field name="name">product.product.view.form.easy.transfer.stock</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                 <header position='inside'>
                     <button name="%(action_view_move_to_scrap_product_quantity)d" string="Transfer Stock" type="action" attrs="{'invisible': [('type', '!=', 'product')]}"/>
                 </header>                
            </field>
        </record>
    	
    	<record model="ir.ui.view" id="product_template_form_view_easy_transfer_product">
            <field name="name">product.easy_transfer_product</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
	            <header position="inside" >
	                <button name="%(action_view_move_to_scrap_product_quantity)d" string="Transfer Stock" type="action" attrs="{'invisible': [('type', '!=', 'product')]}"/>
	            </header>
            </field>
        </record>
        
        <record model="ir.ui.view" id="product_product_form_view_easy_transfer_product">
            <field name="name">product.easy_transfer_product</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
	            <header position="inside" >
	                <button name="%(action_view_move_to_scrap_product_quantity)d" string="Transfer Stock" type="action" attrs="{'invisible': [('type', '!=', 'product')]}"/>
	            </header>
            </field>
        </record>

    </data>
</odoo>

