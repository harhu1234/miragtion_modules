<odoo>
  <data >
    <record id="pos_products_pricelist_temp" model="ssc.create.template">
      <field name="name">POS Products Pricelist (Restaurant)</field>
      <field name="sample_template">True</field>
      <field name="margin_top">0</field>
      <field name="margin_bottom">0</field>
      <field name="margin_left">0</field>
      <field name="margin_right">0</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_20.png"/>
      <field model="ir.model" name="model_id" search="[('model', '=', 'product.pricelist')]"/>
      <field name="body" type="html">
        <div class="page" style="background-color:#e60073;width:100%;height:942px;">

          <!-- cover page  -->

          <div style="background-color:#e60073;width:100%;height:1120px;border-radius: 30px 30px 30px 30px;border: 5px solid black;border-color:#ffffff ! important;">
            <div style="width:100%;height:140px;">

              <div style="width:60%;height:140px;float:left">

                <div style="width:66%;height:120px;float:left">
                  <img src='ht_pdf_report_creator/static/src/img/pricelist_2.png' style="width:100%;height:100px;border-radius: 0px 0px 0px 0px;"/>
                </div>

                <div style="width:33%;height:140px;float:right">
                  <img src='/web/binary/company_logo' style="width:100%;height:120px;border-radius: 10px 10px 10px 10px;"/>
                </div>

              </div>

              <div style="width:39%;height:120px;float:right">
                <img src='ht_pdf_report_creator/static/src/img/pricelist_2.png' style="width:100%;height:100px;border-radius: 0px 0px 0px 0px;"/>
              </div>

            </div>
            <div style="width:100%;height:750px;">
              <div style="width:40%;height:750px;float:left;">
                <img src='ht_pdf_report_creator/static/src/img/pricelist.png' style="width:100%;height:640px;border-radius: 40px 40px 40px 40px;"/>
              </div>
              <div style="width:55%;height:750px;float:right;margin-right:10px;">
                <img src='ht_pdf_report_creator/static/src/img/pricelist_1.png' style="width:100%;height:640px;border-radius: 40px 40px 40px 40px;"/>
              </div>
            </div>

            <div style="width:100%;height:120px;">
              <div style="width:100%;background-color:">
                <img src='ht_pdf_report_creator/static/src/img/pricelist_3.png' style="width:100%;height:85px;border-radius: 0px 0px 0px 0px;"/>
              </div>
            </div>

            <div style="width:100%;height:62px;">
              <div style="width:100%;background-color:#ffffff;height:57px;">
                <div style="width:100%;background-color:#e60073;height:52px;">
                  <div style="width:100%;background-color:#ffffff;height:47px;">
                    <div style="width:100%;background-color:#e60073;height:42px;">
                      <div style="width:100%;background-color:#ffffff;height:37px;">
                        <div style="width:100%;background-color:#e60073;height:32px;">
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          </div>
          <br></br><br></br><br></br><br></br><br></br><br></br><br></br><br></br><br></br><br></br>

          <!-- end of the cover page  -->

          <!-- __________________________________________________________________ -->

          <!-- start of contents pages -->

          <div style="background-color:#ffb3d9;width:100%;">
            % for line in object.item_ids:

              % if loop.index in [10,19,28,37,46,55,64,73,82,91,100,109,118,127,136,145,154,163,172,181,190,199,208.217,226,235,244,253,262,271,280,289,298,307,316,325,334,343,352,361,370,379,388,397,406,415,424.433,442,451,460,469,478,487,496,505,514,523,532,541,550,559,568,577,586,595,604,613,622,631,640,649,658,667,676,685,694,703,712,721,730,739,748,757,766,775,784,793,802,811,820,829,838,847,856,865,874,883,892,901,910,919,928,937,946,955,964,973,982,991,100]:
                <br></br><br></br><br></br>
              % endif

                <div style="width:98%;height:121px;border-radius: 0px 30px 0px 30px;border: 1px solid black;border-color:#ffcce5 ! important;margin-left:5px;">
                  <div style="width:15%;float:left;">
                  </div>
                  <div style="width:83%;float:right;">
                    <table style="width:85%;">
                      <br></br>
                      <tr style="width:100%;">
                        <td style="width:20%;">
                          <b style="font-size:16px;color:#990099;">
                            Name : 
                          </b>
                        </td>
                        <td style="width:80%;border-bottom: 2px solid black;border-color:#ff66b5 ! important;">
                          <n style="font-size:16px;">
                            ${line.name}
                          </n>
                        </td>
                      </tr>
                      <tr style="width:100%;">
                        <td style="width:20%;">
                          <b style="font-size:16px;color:#990099;">
                            Min Quantity : 
                          </b>
                        </td>
                        <td style="width:80%;border-bottom: 2px solid black;border-color:#ff66b5 ! important;">
                          <n style="font-size:16px;">
                            ${line.min_quantity}
                          </n>
                        </td>
                      </tr>
                      <tr style="width:100%;">
                        <td style="width:20%;">
                          <b style="font-size:16px;color:#990099;">
                            Price : 
                          </b>
                        </td>
                        <td style="width:80%;border-bottom: 2px solid black;border-color:#ff66b5 ! important;">
                          <n style="font-size:16px;">
                            ${line.price}
                          </n>
                        </td>
                      </tr>
                    </table>
                  </div>
                </div>
                <br></br>

              <!-- %endif   -->
            % endfor
          </div>

        </div>
      </field>
    </record>
  </data>
</odoo>