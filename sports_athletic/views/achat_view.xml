        <record model="ir.ui.view" id="view_achat_demande_search">
            <field name="name">achat.demande.search.view</field>
            <field name="model">achat.demande</field>
            <field name="type">search</field>
            <field name="arch" type="xml">
                <search string="Demande d'achat">
                    <field name="name"/>
                    <field name="object"/>
                    <group expand="0" string="Groupements">
                        <filter string="Service utilisateur" name="service_utilisateur" domain="[]" context="{'group_by':'responsable_id'}" />
                        <filter string="Date demande" name="date_demand" domain="[]" context="{'group_by':'date'}" />
                        <filter string="Status demande" name="status_demand" domain="[]" context="{'group_by':'state'}" />
                        <filter string="Type demande" name="type_demand" domain="[]" context="{'group_by':'type'}" />
                    </group>
                </search>
            </field>
        </record>

