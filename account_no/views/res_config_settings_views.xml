<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.norway</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='print_vendor_checks_setting_container']" position="after">
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                        title="If you check this box, you will be able to register your payment using SEPA.">
                        <div class="o_setting_left_pane">
                            <field name="module_account_no" widget="upgrade_boolean"/>
                        </div>
                        <div class="o_setting_right_pane" name="norway_right_pane">
                            <label for="module_account_no"/>
                            <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                            <div class="text-muted">
                                Pay your bills in one-click using Norway Local Service
                            </div>
                            <div class="content-group" attrs="{'invisible': [('module_account_no', '=', False)]}">
                            <div class="row mt16">
                                <label for="norway_initiating_party_name" class="col-lg-3 o_light_label"/>
                                <field name="norway_initiating_party_name" class="oe_inline"/>
                            </div>
                            <div class="row">
                                <label for="norway_orgid_id" class="col-lg-3 o_light_label"/>
                                <field name="norway_orgid_id" class="oe_inline"/>
                            </div>
                            <div class="row">
                                <label for="norway_orgid_issr" class="col-lg-3 o_light_label"/>
                                <field name="norway_orgid_issr" class="oe_inline"/>
                            </div>
                            <div class="row" groups="base.group_no_one">
                                <label for="norway_pain_version" class="col-lg-3 o_light_label"/>
                                <field name="norway_pain_version" class="oe_inline"/>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
