<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="mail_template_application_portal_welcome" model="mail.template">
            <field name="name">Portal: Application user</field>
            <field name="model_id" ref="base.model_res_users"/>
            <field name="email_to">${object.partner_id.email or '') | safe}</field>
            <field name="subject">Documentatie aanleveren</field>
            <field name="lang">${object.partner_id.lang}</field>
            <field name="auto_delete" eval="True"/>
            <!-- <field name="user_signature" eval="True"/> -->
            <field name="body_html" type="html">
                <p>
                    Beste ${object.name or ''},
                </p>
                <p>
                    Wij zijn enthousiast en gaan graag een samenwerking met jou aan.</p>
                <p>
                    Hiervoor willen wij jou vragen een aantal documenten bij ons aan te leveren.
                </p>
                <p>
                   Dit kan je doen door op onderstaande link te klikken.
                </p>
                <ul>
                    <li><a href="${object.signup_url}">${object.signup_url}</a></li>
                </ul>
                <p>Mocht je nog vragen hebben kan je altijd terecht bij het Aanmeld en informatiepunt.</p>
                <p>Zij zullen je begeleiden en ondersteunen naar een fijne start.</p>

                <p>Tel: 085-3002300 <br/>
                E-mail: ai@de-zorgcoach.nl</p>
            </field>
        </record>
    </data>
</odoo>
