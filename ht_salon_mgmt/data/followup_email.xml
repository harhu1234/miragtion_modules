<?xml version="1.0" encoding="utf-8" ?>

<odoo>
   <data noupdate="1">
       <!--Email template -->
       <record id="template_followup_email" model="mail.template">
           <field name="name">Followup Email Template</field>
           <field name="model_id" ref="ht_salon_mgmt.model_customer_appointment"/>
           <field name="email_from">{{object.customer_id.company_id and object.customer_id.company_id.email or ''}}</field>
           <field name="email_to" >{{object.customer_id.email}}</field>
           <field name="subject">Thank you for visiting our salon!</field>
           <field name="auto_delete" eval="True"/>
           <field name="lang">{{object.customer_id.lang}}</field>
           <field name="body_html" type="html">
                <p>Hi <t t-out="object.customer_id.name"/>,</p>
                <br/>
                <p>Thanks for visiting <t t-out="object.customer_id.company_id.name"/>!</p>
                <p>We hope you had a great time and enjoyed our services.</p>
                <p>If you have a few minutes, could you leave us a Google review <a href="https://www.perfectionspa.co.uk/about-the-salon/feedback/"><t t-out="object.customer_id.company_id.name"/></a> and let others know about your experience? We appreciate any and all feedback as it helps us make improvements where needed.</p>
                <p>Thank you for your time! <t t-out="object.customer_id.company_id.website"/></p>
                <br/>
           </field>
       </record>
   </data>
</odoo>