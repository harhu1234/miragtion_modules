<odoo>
  <data >
    <record id="employee_id_card_template_2" model="ssc.create.template">
      <field name="name">Employee ID Card Template (back side)</field>
      <field name="sample_template">True</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_11.png"/>
      <field model="ir.model" name="model_id" search="[('model', '=', 'hr.employee')]"/>
      <field name="body" type="html">
        <div style="width:50%;height:height:250px;">
          <div style="width:100;height:250px;background-color:#990099;border-radius: 10px 0px 10px 0px;margin-bottom:15px;">
            <div style="width:100;height:245px;background-color:#ffffff;border:1px;border-radius: 10px 0px 10px 0px;">
              <div style="width:100;height:240px;padding-top:25px;background-color:#990099;border-radius: 10px 0px 12px 0px;">
                <center>
                  <div style="width:30%;height:140px;border-radius: 20px 20px 20px 20px;border: 1px solid black;border-color:#ffffff ! important;">
                    <img src='/web/binary/company_logo' style="width:100%;height:120px;border-radius: 20px 20px 20px 20px;"/>
                  </div>
                  <div style="width:96%;font-size:14px;color:#ffffff">
                    <n style="font-size:14px;color:#ffffff">
                      ${object.department_id.company_id.name} , 
                      Street: ${object.department_id.company_id.street} ,
                      City: ${object.department_id.company_id.city} , 
                      ZIP: ${object.department_id.company_id.zip} 
                    </n>
                  </div>
                </center>
              </div>
            </div>
          </div>
        </div>
      </field>
    </record>
  </data>
</odoo>