<odoo>
    <!-- Installment form view -->
    <record id="installment_view_form" model="ir.ui.view">
        <field name="name">Installment Form View</field>
        <field name="model">installment</field>
        <field name="arch" type="xml">
            <form string="installment">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

        <!-- installment tree view -->
    <record id="installment_view_tree" model="ir.ui.view">
        <field name="name">installment Tree View</field>
        <field name="model">installment</field>
        <field name="arch" type="xml">
            <tree string="Installment">
                <field name="name"/>
            </tree>
        </field>
    </record>

