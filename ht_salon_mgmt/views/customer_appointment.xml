<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <!-- Calendar view of Customer Appointment-->
        <record id="customer_appointment_calendar_view" model="ir.ui.view">
            <field name="name">customer.appointment.calendar.view</field>
            <field name="model">customer.appointment</field>
            <field name="arch" type="xml">
                <calendar string="Customer Appointment"  date_start="schedue_time" color="customer_id" quick_add="False">
                        <field name="customer_id"/>
                </calendar>
            </field>
        </record>
        <!-- End Calendar View -->

        <!-- Kanban view of Customer Appointment-->
        <record id="customer_appointment_kanban_view" model="ir.ui.view">
            <field name="name">customer.appointment.kanban</field>
            <field name="model">customer.appointment</field>
            <field name="arch" type="xml">
                <kanban default_group_by="state">
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="cust_img" widget="image"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    Name : <field name="customer_id"/><br/>
                                    Schedual : <field name="schedue_time"/><br/>
                                    <field name="customer_type" readonly="1"/>
                                    </strong>
                                    <br/>
                                    Service : <field name="count_service"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <!-- End Kanban View-->

        <!-- Search view of Customer Appointment-->
        <record id="customer_appointment_search_view" model="ir.ui.view">
            <field name="name">customer.appointment.search</field>
            <field name="model">customer.appointment</field>
            <field name="arch" type="xml">
                <search>
                    <field name="customer_id"/>
                    <field name="schedue_time"/>
                    <field name="attendee_id"/>
                    <field name="customer_type"/>
                    <filter string="Date" name="filter_create_date" date="schedue_time"/>
                    <group expand="0" string="Group By">
                        <filter string="Date" name="Date_month" domain="[]" context="{'group_by': 'schedue_time'}"/>
                    </group>
                </search>
            </field>
        </record>
        <!--End Search view-->

        <!-- Form view of Customer Appointment-->
        <record id="customer_appointment_form_view" model="ir.ui.view">
            <field name="name">customer.appointment.form</field>
            <field name="model">customer.appointment</field>
            <field name="arch" type="xml">
                <form string="Appointment">
                    <header>
                        <button name="action_send_mail" states="confirm" type="object" string="Send Mail" class="oe_highlight"/>
                        <button name="action_followup_mail" states="done" type="object" string="Followup" class="oe_highlight"/>
                        <button name="generate_appoinment" string="Generate Appointment" class="oe_highlight" type="object"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirm,progress,done,cancel" clickable="1"/>
                    </header>
                    <sheet>
                        <field name="cust_img" class="oe_avatar" widget="image"/>
                        <div class="oe_title">
                            <h1>
                                <field name="customer_id" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="schedue_time"/>
                                <field name="customer_type"/>
                                <field name="attendee_id"/>
                            </group>
                            <group>
                                <field name="floor_no" attrs="{'invisible':[('state','!=','progress')]}"/>
                                <field name="seat_no" attrs="{'invisible':[('state','!=','progress')]}"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Services">
                                <field name="services_ids">
                                    <tree>
                                        <field name="service_type"/>
                                        <field name="services_id" attrs="{'invisible':[('service_type','=','package')]}"/>
                                        <field name="package_id" attrs="{'invisible':[('service_type','!=','package')]}"/>
                                        <field name="package_desc" attrs="{'invisible':[('service_type','!=','package')]}"/>
                                        <field name="product_id" attrs="{'invisible':[('service_type','=','package')]}"/>
                                        <field name="description" attrs="{'invisible':[('service_type','=','package')]}"/>
                                        <field name="coupon_code"/>
                                        <field name="offer_price"/>
                                        <field name="price"/>
                                        <field name="sum"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                            <div class="oe_avatar">
                                <group><field name="amount"/></group>
                            </div>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!-- End Form view-->

        <!--Tree view of Customer Appoinment-->
        <record id="customer_appointment_tree_view" model="ir.ui.view">
            <field name="name">customer.appointment.tree</field>
            <field name="model">customer.appointment</field>
            <field name="arch" type="xml">
                <tree string="Appointment">
                    <field name="customer_id"/>
                    <field name="schedue_time"/>
                    <field name="customer_type"/>
                    <field name="attendee_id"/>
                    <field name="state"/>
                    <field name="amount"/>
                </tree>
            </field>
        </record>
        <!--End Tree View-->

        <!-- View Action of Customer Appoinment-->
        <record id="action_appointment_view" model="ir.actions.act_window">
            <field name="name">Appointment Details</field>
            <field name="res_model">customer.appointment</field>
            <field name="view_mode">calendar,kanban,tree,form</field>
        </record>
        <!-- End view Action -->

        <!--Main Configure Menu-->
        <menuitem id="main_menu_salon" name="Salon" sequence="1"/>

        <!--Main Menu of Customer Appoinment-->
        <menuitem id="view_menu_appointment" name="Appointment" action="action_appointment_view" parent="main_menu_salon" sequence="2"/>

        <!--Form View of Customer Service-->
        <record id="customer_service_form_view" model="ir.ui.view">
            <field name="name">customer.service.form.view</field>
            <field name="model">customer.service</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="service_type"/>
                                <field name="services_id" attrs="{'invisible':[('service_type','=','package')]}"/>
                                <field name="package_id" attrs="{'invisible':[('service_type','!=','package')]}"/>
                                <field name="package_desc" attrs="{'invisible':[('service_type','!=','package')]}"/>
                            </group>
                            <group>
                                <field name="product_id" attrs="{'invisible':[('service_type','=','package')]}"/>
                                <field name="description" attrs="{'invisible':[('service_type','=','package')]}"/>
                                <field name="coupon_code"/>
                                <field name="offer_price"/>
                                <field name="price"/>
                                <field name="sum"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!--End Form View-->

        <!--Form View Service Coupon-->
        <record id="service_coupon_form_view" model="ir.ui.view">
            <field name="name">coupon.code.form</field>
            <field name="model">coupon.code</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="discount_type"/>
                                <field name="discount_value"/>
                            </group>
                            <group>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <!--End Form View-->

        <!--Tree View of Service Coupon-->
        <record id="service_coupon_tree_view" model="ir.ui.view">
            <field name="name">coupon.code.tree</field>
            <field name="model">coupon.code</field>
            <field name="arch" type="xml">
                <tree string="Service Coupon">
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>
        <!--End Tree view-->

        <!--View Action Of Service Coupon -->
        <record id="action_service_coupon_view" model="ir.actions.act_window">
            <field name="name">Service Coupon Details</field>
            <field name="res_model">coupon.code</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!--End View Action -->
    </data>
</odoo>