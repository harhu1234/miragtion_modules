<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
         <!--Tree for Import Orders History tree view-->
        <record id="import_orders_master_tree_view" model="ir.ui.view">
            <field name="name">import.order.master.tree.view</field>
            <field name="model">import.order.master</field>
            <field name="arch" type="xml">
                <tree create="false" import="false">
                    <field name="filename"/>
                    <field name="cron_id"/>
                    <field name="user_id"/>
                    <field name="status"/>
                    <field name="import_type"/>
                </tree>
            </field>
        </record>

        <!--Form for Import Orders Master-->
        <record id="import_orders_master_form_view" model="ir.ui.view">
            <field name="name">import.order.master.form.view</field>
            <field name="model">import.order.master</field>
            <field name="arch" type="xml">
                <form create="false" import="false" edit="false">
                    <group>
                        <group>
                            <field name="filename" invisible="1"/>
                            <field name="file" filename="filename"/>
                            <field name="type"/>
                        </group>
                        <group>
                            <field name="user_id"/>
                            <field name="status"/>
                            <field name="cron_id"/>
                            <field name="operation"/>
                            <field name="import_type"/>
                        </group>
                    </group>
                </form>
            </field>
        </record>

        <!--Action-->
        <record id="action_import_orders_master" model="ir.actions.act_window">
            <field name="name">Imported Orders Status</field>
            <field name="res_model">import.order.master</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Imported Orders Status" action="action_import_orders_master" id="menu_import_orders_master"
                  parent="jt_import_sales_data.menu_import_orders"/>

    </data>
</odoo>
