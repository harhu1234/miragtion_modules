<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Sale Configuration -->
        <record id="res_config_settings_view_form_inh_sale" model="ir.ui.view">
            <field name="name">res.config.settings.form.view.inh.sale</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@data-key='sale_management']" position="inside">
                    <h2>Customer Feedback Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="sale_template_id" string="Feedback Link Template"/><br/>
                                <field name="sale_template_id"/>
                                <div class="text-muted">
                                    Default Template For Feedback Form Invitation.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="sale_survey_id" string="Default Survey Form"/><br/>
                                <field name="sale_survey_id"/>
                                <div class="text-muted">
                                    Default Feedback Form
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

