<?xml version="1.0" ?>
<odoo>
    <record id="inherit_move_tree_view" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherit_move_form_view" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">false</attribute>
            </xpath>
            <xpath expr="//field[@name='ref']" position="after">
                <field name="landlord_id" string="Property Owner"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                    <div name="options" groups="base.group_user">
                    <div>
                        <field name="can_be_sold" attrs="{'invisible':[('can_be_rent','=',True)]}"/>
                        <label for="can_be_sold" attrs="{'invisible':[('can_be_rent','=',True)]}"/>
                    </div>
                    <div>
                        <field name="can_be_rent" attrs="{'invisible':[('can_be_sold','=',True)]}"/>
                        <label for="can_be_rent" attrs="{'invisible':[('can_be_sold','=',True)]}"/>
                    </div>
                </div>
            </xpath>
          <!--   <xpath expr="//page[@id='invoice_tab']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath> -->
               <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="attributes">
                <attribute name="string">Property Details</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/control/create[@name='add_section_control']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/control/create[@name='add_note_control']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
           <!--  <xpath expr="//field[@name='invoice_line_ids']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath> -->
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='name']" position="before">
                <field name="property_id" force_save="1"/>
            </xpath>
            <xpath expr="//field[@name='line_ids']/tree/field[@name='name']" position="before">
                <field name="property_id" force_save="1" invisible="1"/>
            </xpath>
        </field>
    </record>


    <menuitem
        name="Payments"
        id="property_payment_menu"
        action="account.action_move_out_invoice_type"
        sequence="2"
        parent="property_root_menu"
    />
</odoo>
