<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="attendee_report_wizard_form_view" model="ir.ui.view">
        <field name="name">Attendee Report Wizard Form View</field>
        <field name="model">attendee.report.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="attendee_by" required="1"/>
                            <field name="attendee_day" attrs="{'invisible':[('attendee_by','!=','day')]}"/>
                            <field name="attendee_month" attrs="{'invisible':[('attendee_by','!=','month')]}"/>
                            <field name="start_date" attrs="{'invisible':[('attendee_by','!=','date_range')]}"/>
                            <field name="end_date" attrs="{'invisible':[('attendee_by','!=','date_range')]}"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="attendee_report_object" string="Report" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_attendee_report_view" model="ir.actions.act_window">
        <field name="name">Attendee Report Wizard </field>
        <field name="res_model">attendee.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="attendee_report_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>
