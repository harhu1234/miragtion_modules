<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="membership_kanban_view" model="ir.ui.view">
            <field name="name">membership.membership.kanban</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="o_kanban_image">
                                    <field name="image" widget="image"/>
                                </div>
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    Name : <field name="name"/><br/>
                                    Type : <field name="type"/><br/>
                                    <field name="discount" readonly="1"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="membership_search_view" model="ir.ui.view">
            <field name="name">membership.membership.search</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="type"/>
                    <group expand="0" string="Group By">
                        <filter string="Type" name="type" domain="[]" context="{'group_by': 'type'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="membership_form_view" model="ir.ui.view">
            <field name="name">membership.membership.form.view</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box">
                            <button class="oe_stat_button" name="action_count_service" type="object" icon="fa-list-alt">
                                <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_value"><field name="service_count"/></span>
                                    <span class="o_stat_text"> Services</span>
                                </div>
                            </button>
                        </div>
                        <field name="image" class="oe_avatar" widget="image"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="start_date"/>
                                <field name="type"/>
                                <field name="service_ids" widget="many2many_tags"/>
                                <field name="fees"/>
                            </group>
                            <group>
                                <field name="end_date"/>
                                <field name="description"/>
                                <field name="discount"/>
                                <field name="total"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="membership_tree_view" model="ir.ui.view">
            <field name="name">membership.membership.tree.view</field>
            <field name="model">membership.membership</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="type"/>
                    <field name="fees"/>
                    <field name="discount"/>
                    <field name="total"/>
                </tree>
            </field>
        </record>
        <record id="action_membership_view" model="ir.actions.act_window">
            <field name="name">Membership</field>
            <field name="res_model">membership.membership</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
        <menuitem id="main_menu_membership" parent="main_menu_salon" action="action_membership_view" name="Memberships" sequence="3"/>
    </data>
</odoo>