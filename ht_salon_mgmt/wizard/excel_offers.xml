<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
        <record id="excel_offers_form_view" model="ir.ui.view">
            <field name="name">Excel Offers</field>
            <field name="model">export.excel.offers</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="excel_file" readonly="1" filename="filename"/>
                                <field name="filename" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_offers_excel" string="Excel Offers" type="object" class="oe_highlight"/>
                        <button special="cancel" string="Cancel" class="btn btn-default"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_excel_offers" model="ir.actions.act_window">
            <field name="name">Excel Offers</field>
            <field name="res_model">export.excel.offers</field>
            <field name="binding_model_id" ref="model_offer_service"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>