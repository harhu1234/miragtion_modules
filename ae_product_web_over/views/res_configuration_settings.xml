<?xml version="1.0" encoding="UTF-8"?>
<odoo>
<data>
        <record id="stock_config_settings_view_form" model="ir.ui.view">
            <field name="name">stock.config.settings.view.form.inherit.stock</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="30"/>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]//div[@data-key='stock']" position="inside">
                    <h2>Product Detail Popover</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="stock_popover"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="stock_popover"/>
                                <div class="text-muted">

                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

