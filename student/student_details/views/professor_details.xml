<?xml version="1.0" encoding="utf-8"?>
<odoo>	

      <record id="view_professor_details_form" model="ir.ui.view">
            <field name="name">professor.details.form</field>
            <field name="model">professor.details</field>
            <field name="arch" type="xml">
                  <form>
                        <sheet>
                              <group>
                                    <group>
                                          <field name="name" placeholder="Name" required="True"/>
                                          <field name="mname" placeholder="Father Name"/>
                                          <field name="college_id"/>
                                          <field name="contact" placeholder="Mobile No" required="True"/>
                                          <field name="age"/>
                                          <field name="hometown"/>
                                    </group>
                                    <group>
                                          <field name="lname" placeholder="Surname" required="True"/>
                                          <field name="brith_date" placeholder="Brith Date"/>
                                          <field name="department_id" domain="[('college_id','=',college_id)]"/>
                                          <field name="email" placeholder="E-mail"/>
                                          <field name="gender"/>
                                          <field name="contry"/>
                                          <field name="state"/>
                                    </group>
                              </group>
                        </sheet>
                  </form>
            </field>
      </record>

      <record id="view_professor_details_tree" model="ir.ui.view">
            <field name="name">professor.details.tree</field>
            <field name="model">professor.details</field>
            <field name="arch" type="xml">
                  <tree>
                        <field name="name"/>
                        <field name="email"/>
                        <field name="department_id"/>
                        <field name="contact"/>
                        <field name="hometown"/>
                        <field name="age"/>
                        <field name="gender"/>
                  </tree>
            </field>
            
      </record>


	<record id="action_professor_details" model="ir.actions.act_window">
		<field name="name">professor Details</field>
		<field name="res_model">professor.details</field>
            <field name="view_mode">tree,form</field>
	</record>

	
      <menuitem id="menu_student_root" name="Student"/>

	<menuitem id="menu_professor_deatils_main" name="Professor" action="action_professor_details" parent="menu_student_root"/>
	
</odoo>