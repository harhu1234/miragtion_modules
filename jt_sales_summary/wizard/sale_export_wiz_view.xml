<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Export Sales Summary Report Wizard Form View -->
    <record id="export_sales_summary_view_new" model="ir.ui.view">
        <field name="name">Export Sales Summary Report Wizard</field>
        <field name="model">sale.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export Sales Summary Report">
                <group states="choose">
                    <field name="start_date" string='Start Date' required="1"/>
                    <field name="end_date" string='End Date' required="1"/>
                    <field name="state" invisible="1" />
                </group>
                <div states="get">
                    <group>
                        <field name="name" colspan="4" invisible="1"/>
                        <field name="report" filename="name" colspan="4"/>
                    </group>
                </div>
                 <footer states="choose">
                    <button name="export_sale_data" string="Export"
                        type="object" class="oe_highlight" />
                    <span> Or </span>
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel" />
                 </footer>
            </form>
        </field>
    </record>

</odoo>