<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<template id="contact_page" name="Contact page">
		<t t-call="website.layout">
			<div id="wrap">
				<div class="oe_structure"/>
				<!-- Page Banner Start -->
		        <section class="page-banner bgs-cover overlay pt-50" style="background-image: url('/ht_restly/static/src/images/banner.jpg');">
		            <div class="container">
		                <div class="banner-inner">
		                    <h1 class="page-title">Contact Us</h1>
		                    <nav aria-label="breadcrumb">
		                        <ol class="breadcrumb">
		                            <li class="breadcrumb-item"><a href="/">Restly</a></li>
		                            <li class="breadcrumb-item active">Contact</li>
		                        </ol>
		                    </nav>
		                </div>
		            </div>
		        </section>
		        <!-- Page Banner End -->
		        <div class="oe_structure"/>
		        <!-- Contact Section Start -->
		        <section class="contact-page py-120 rpy-100">
		            <div class="container">
		                <div class="contact-info-area mb-80">
		                    <div class="contact-info-item fadeInUp delay-0-2s">
		                        <i class="far fa-map"></i>
		                        <p><t t-if="res_company.street" t-esc="res_company.street"/>,<t t-if="res_company.street2" t-esc="res_company.street2"/>,<t t-if="res_company.city" t-esc="res_company.city"/>,<t t-if="res_company.state_id.name" t-esc="res_company.state_id.name"/> <t t-if="res_company.zip" t-esc="res_company.zip"/>,<t t-if="res_company.country_id.name" t-esc="res_company.country_id.name"/></p>
		                    </div>
		                    <div class="contact-info-item fadeInUp delay-0-4s">
		                        <i class="far fa-envelope"></i>
		                        <p><a t-if="res_company.email" href="mailto:${res_company.email}"><t t-esc="res_company.email"/></a> <br/><a if="res_company.website" t-attf-href="{{res_company.website}}"><t t-esc="res_company.website"/></a></p>
		                    </div>
		                    <div class="contact-info-item fadeInUp delay-0-6s">
		                        <i class="fas fa-phone-alt"></i>
		                        <p><a t-if="res_company.phone" href="#"><t t-esc="res_company.phone"/></a> 
		                        <!-- <br/><a>+0234 (456) 9864</a> -->
		                    </p>
		                    </div>
		                </div>
		                <div class="row">
		                    <div class="col-lg-4">
		                        <section class="contact-form-left bgs-cover h-100 fadeInLeft delay-0-2s" style="background-image: url('/ht_restly/static/src/images/contact/contact-page.jpg')">
		                            <h2>Leave A Message</h2>
		                        </section>
		                    </div>
		                    <div class="col-lg-8">
		                        <div class="contact-form ml-40 rml-0 rmt-55 fadeInRight delay-0-2s s_website_form" data-vcss="001" data-snippet="s_website_form">
		                            <h3 class="comment-title mb-35">Send A Message</h3>
		                            <p>Avoids pleasure itself, because it is pleasure, but because those who do not know how to pursue pleasure rationally encounter</p>
		                            
		                            <form id="contactus_form" action="/website_form/" method="post" enctype="multipart/form-data" data-model_name="crm.lead" data-success-mode="redirect" data-success-page="/contactus-thank-you" class="o_mark_required comment-form mt-35" data-mark="*" data-editable-form="false">
		                                <div class="s_website_form_rows row s_col_no_bgcolor clearfix justify-content-center">
		                                    <div class="form-group col-sm-6 s_website_form_field s_website_form_required" data-type="char" data-name="Field">
		                                        <div class="row s_col_no_resize s_col_no_bgcolor">
		                                            <div class="col-sm">
		                                                <input placeholder="Your Name" id="opportunity1" type="text" class="form-control s_website_form_input" name="contact_name" required=""/>
		                                            </div>
		                                        </div>
		                                    </div>
		                                    <div class="form-group col-sm-6 s_website_form_field" data-type="char" data-name="Field">
		                                        <div class="row s_col_no_resize s_col_no_bgcolor">
		                                            <div class="col-sm">
		                                                <input id="opportunity2" placeholder="Phone Number" type="tel" class="form-control s_website_form_input" name="phone" />
		                                            </div>
		                                        </div>
		                                    </div>
		                                    <div class="form-group col-sm-6 s_website_form_field s_website_form_required" data-type="char" data-name="Field">
		                                        <div class="row s_col_no_resize s_col_no_bgcolor">
		                                            <div class="col-sm">
		                                                <input placeholder="Email" id="opportunity3" type="text" class="form-control s_website_form_input" name="email_from" required="" />
		                                            </div>
		                                        </div>
		                                    </div>
		                                    <div class="form-group col-sm-6 s_website_form_field" data-type="char" data-name="Field">
		                                        <div class="row s_col_no_resize s_col_no_bgcolor">
		                                          <div class="col-sm">
		                                                <input id="opportunity4" placeholder="Your Company" type="text" class="form-control s_website_form_input" name="partner_name" />
		                                            </div>
		                                        </div>
		                                    </div>
		                                    <div class="form-group col-sm-12 s_website_form_field s_website_form_model_required" data-type="char" data-name="Field">
		                                        <div class="row s_col_no_resize s_col_no_bgcolor">
		                                            <div class="col-sm">
		                                                <input id="opportunity5" placeholder="Subject" type="text" class="form-control s_website_form_input" name="name" required="" />
		                                            </div>
		                                        </div>
		                                    </div>
		                                    <div class="form-group col-sm-12 s_website_form_field s_website_form_required" data-type="text" data-name="Field">
		                                        <div class="row s_col_no_resize s_col_no_bgcolor">
		                                            <div class="col-sm">
		                                                <textarea id="opportunity6" placeholder="Your Question" class="form-control s_website_form_input" name="description" required=""></textarea>
		                                            </div>
		                                        </div>
		                                    </div>
		                                    <div class="form-group col-sm-12 s_website_form_submit mb-0" data-name="Submit Button">
		                                        <a href="#" role="button" class="theme-btn btn-primary btn-lg s_website_form_send">Send Message</a>
		                                    </div>
		                                </div>
		                            </form>
		                        </div>
		                    </div>
		                </div>
		            </div>
		        </section>
		        <!-- Contact Section End -->
		        <div class="oe_structure"/>
		        <!--======== Map =========-->
		        <div class="contact-page-map">
		            <div class="our-location">
		                <iframe src="https://maps.google.com/maps?width=600&amp;height=400&amp;hl=en&amp;q=Jupical Technologies Pvt. Ltd., 617 RK Prime, Nr Nana Mauva Circle 150 Feet Ring Road beside Silver Heights, Rajkot&amp;t=&amp;z=14&amp;ie=UTF8&amp;iwloc=B&amp;output=embed" height="650" style="border:0; width: 100%;"
		                    allowfullscreen="" loading="lazy"></iframe>
		            </div>
		        </div>
		        <!--======== Map =========-->
		        <div class="oe_structure"/>
			</div>
		</t>
	</template>
</odoo>