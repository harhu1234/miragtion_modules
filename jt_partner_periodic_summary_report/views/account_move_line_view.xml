<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="account_move_line_view_form" model="ir.ui.view">
            <field name="name">account.move.line.view.form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_vat" string="Vat Partner"/>
                </xpath>
            </field>
        </record>

        <record id="account_move_line_view_tree" model="ir.ui.view">
            <field name="name">account.move.line.view.tree</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="partner_vat" string="Vat Partner"/>
                </xpath>
            </field>
        </record>

        <record id="action_server_set_partner_vat" model="ir.actions.server">
            <field name="name">Set Partner Vat</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="account.model_account_move_line"/>
            <field name="binding_view_types">form</field>
            <field name="state">code</field>
            <field name="binding_model_id" ref="account.model_account_move_line"/>
            <field name="code">
                if records:
                    action = records.set_partner_vat_server()
            </field>
        </record>
    </data>
</odoo>