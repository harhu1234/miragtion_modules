<?xml version="1.0" encoding="utf-8" ?>

<odoo>
   <data noupdate="1">
       <!--Email template -->
       <record id="template_offers_email" model="mail.template">
           <field name="name">Offer Email Template</field>
           <field name="model_id" ref="ht_salon_mgmt.model_customer_appointment"/>
           <field name="email_from">{{object.customer_id.company_id and object.customer_id.company_id.email or ''}}</field>
           <field name="email_to" >{{object.customer_id.email}}</field>
           <field name="subject">Ref {{object.customer_id.name or 'n/a' }}</field>
           <field name="auto_delete" eval="True"/>
           <field name="lang">{{object.customer_id.lang}}</field>
           <field name="body_html" type="html">
                <p>Hi,</p>
                <br/>
                <p>New "Navratri Offer" Coming Soon! Visit Our Website</p>
                <a href="https://jupical.com">salon Management</a>
                <br/>
           </field>
       </record>
   </data>
</odoo>