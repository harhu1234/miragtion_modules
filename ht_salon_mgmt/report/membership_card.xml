	<record id="paperformat_membership_card" model="report.paperformat">
		<field name="name">membership card</field>
		<field name="default" eval="True"/>
		<field name="format">custom</field>
		<field name="page_height">165</field>
		<field name="page_width">90</field>
		<field name="orientation">Landscape</field>
		<field name="margin_top">0</field>
		<field name="margin_bottom">0</field>
		<field name="margin_left">0</field>
		<field name="margin_right">0</field>
		<field name="header_line" eval="False"/>
		<field name="header_spacing">40</field>
		<field name="dpi">90</field>
	</record>


	<record id="membership_card" model="ir.actions.report">
		<field name="name">Membership Card</field>
		<field name="model">membership.membership</field>
		<field name="report_type">qweb-pdf</field>
		<field name="report_name">ht_salon_mgmt.membership_card_report</field>
		<field name="report_file">ht_salon_mgmt.membership_card_report</field>
		<field name="print_report_name">'Membership Card - %s' % (object.name)</field>
		<field name="paperformat_id" ref="ht_salon_mgmt.paperformat_membership_card"/>
	</record>
