<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="excel_package_form_view" model="ir.ui.view">
            <field name="name">Excel Package Form</field>
            <field name="model">export.excel.package</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="excel_file" filename="filename" readonly="1"/>
                                <field name="filename" invisible="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="print_package_excel" string="Package Excel" class="oe_highlight" type="object"/>
                        <button special="cancel" string="Cancel" class="btn btn-default"/>
                    </footer>
                </form>
            </field>
        </record>


        <record id="action_package_excel" model="ir.actions.act_window">
            <field name="name">Excel Package</field>
            <field name="res_model">export.excel.package</field>
            <field name="binding_model_id" ref="model_pacakge_package"/>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</odoo>