<?xml version="1.0" encoding="UTF-8"?>

<odoo>
		<record id="package_form_view" model="ir.ui.view">
			<field name="name">Package Form View</field>
			<field name="model">package.service.wizard</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="package_service"/>
								<field name="package" attrs="{'invisible':[('package_service','!=','select_package')]}"/>
							</group>
						</group>
					</sheet>
					<footer>
						<button name="package_service_report" string="Report" type="object" class="oe_highlight"/>
                    	<button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
					</footer>
				</form>
			</field>
		</record>

		<record id="action_package_view" model="ir.actions.act_window">
			<field name="name">Package Service Wizard</field>
			<field name="res_model">package.service.wizard</field>
			<field name="view_mode">form</field>
			<field name="view_id" ref="package_form_view"/>
			<field name="target">new</field>
		</record>
</odoo>