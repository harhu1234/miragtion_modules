<odoo>
  <data >
    <record id="employee_id_card_template_1" model="ssc.create.template">
      <field name="name">Employee ID Card Template (front side)</field>
      <field name="sample_template">True</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_10.png"/>
      <field model="ir.model" name="model_id" search="[('model', '=', 'hr.employee')]"/>
      <field name="body" type="html">
        <div style="width:50%;height:height:250px;">

          <!-- """header""" -->

          <div style="width:100;height:35px;background-color:#990099;border-radius: 10px 0px 10px 0px;margin-bottom:15px;">
            <div style="width:100;height:33px;background-color:#ffffff;border:1px;border-radius: 10px 0px 10px 0px;">
              <div style="width:100;height:31px;background-color:#990099;border-radius: 10px 0px 12px 0px;">
                <b style="font-size:18px;color:#ffffff;margin-left:10px;">
                  ${object.name}
                </b>
              </div>
            </div>
          </div>

          <!-- """""" -->

          <div style="width:100%;">
            <div style="width:70%;float:left;border-radius: 20px 20px 20px 20px;border: 1px solid black;border-color:#ffffff ! important;border-right-color:#ffb3ff ! important;">
              <table style="width:100%;">
                <tr style="width:100%;">
                  <td style="width:100%;">
                    <div style="width:100%;float:left;border-radius: 10px 0px 10px 0px;">
                      <table style="width:65%;">
                        <tr style="width:100%;">
                          <td style="width:35%;background-color:#ff99ff;border-radius: 10px 0px 50px 10px;border-bottom: 2px solid black;border-color:#ffffff ! important;padding:4px 14px 4px 4px;">
                            <b style="font-size:16px;">
                              department: 
                            </b>
                          </td>
                          <td style="width:65%;border-bottom: 2px solid black;border-color:#ff99ff ! important;">
                            <n style="font-size:16px;">
                              ${object.department_id.name}
                            </n>
                          </td>
                        </tr>
                        <tr style="width:100%;">
                          <td style="width:35%;background-color:#ff99ff;border-radius: 10px 50px 0px 10px;border-bottom: 2px solid black;border-color:#ffffff ! important;padding:4px 14px 4px 4px;">
                            <b style="font-size:16px;">
                              Job: 
                            </b>
                          </td>
                          <td style="width:65%;border-bottom: 2px solid black;border-color:#ff99ff ! important;">
                            <n style="font-size:16px;">
                              ${object.job_id.name}
                            </n>
                          </td>
                        </tr>
                        <tr style="width:100%;">
                          <td style="width:35%;background-color:#ff99ff;border-radius: 10px 0px 50px 10px;border-bottom: 2px solid black;border-color:#ffffff ! important;padding:4px 14px 4px 4px;">
                            <b style="font-size:16px;">
                              <i class="fa fa-phone">
                              </i>
                            </b>
                          </td>
                          <td style="width:65%;border-bottom: 2px solid black;border-color:#ff99ff ! important;">
                            <n style="font-size:16px;">
                              ${object.work_phone}
                            </n>
                          </td>
                        </tr>
                        <tr style="width:100%;">
                          <td style="width:35%;background-color:#ff99ff;border-radius: 10px 50px 0px 10px;border-bottom: 2px solid black;border-color:#ffffff ! important;padding:4px 14px 4px 4px;">
                            <b style="font-size:16px;">
                              <i class="fa fa-envelope">
                              </i>
                            </b>
                          </td>
                          <td style="width:65%;border-bottom: 2px solid black;border-color:#ff99ff ! important;">
                            <n style="font-size:16px;">
                              ${object.work_email}
                            </n>
                          </td>
                        </tr>
                      </table>
                    </div>
                  </td>
                </tr>
              </table>
            </div>
            <div style="width:30%;height:140px;float:right;border-radius: 40px 40px 40px 40px;border: 1px solid black;border-color:#ffb3ff ! important;border-left-color:#ffb3ff ! important;">
              <img src='/web/binary/company_logo' style="width:100%;height:140px;border-radius: 40px 40px 40px 40px;"/>
            </div>
          </div>
          <br></br><br></br><br></br><br></br><br></br><br></br><br></br><br></br>

          <div style="width:100%;height:10px;border-radius: 0px 0px 0px 20px;border-bottom: 2px solid black;border-left: 2px solid black;border-color:#990099 ! important;">
          </div>
          <div style="width:100%;height:5px;border-radius: 0px 0px 0px 20px;border-bottom: 2px solid black;border-left: 2px solid black;border-color:#990099 ! important;">
          </div>

        </div>
      </field>
    </record>
  </data>
</odoo>