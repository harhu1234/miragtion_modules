<odoo>
  <data >
    <record id="account_invoice_temp_1_template" model="ssc.create.template">
      <field name="name">Customer Invoice Classic Template</field>
      <field name="sample_template">True</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_12.png"/>
      <field model="ir.model" name="model_id" search="[('model', '=', 'account.move')]"/>
      <field name="body" type="html">
        <div width="100%" >

          <!-- """ header""" -->

          <b style="font-size:24px;">
            Invoice ____
            #NO 
            ${object.name}
          </b>
          <br></br><br></br><br></br>

          <!-- """ partner information details """ -->

          <table style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
            <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;background-color: #ccffff ! important;">
              <td style="width:50%;border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:18px;">
                  Company
                </b>
              </td>
              <td style="width:50%;border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:18px;">
                  Customer
                </b>
              </td>
            </tr>
            <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
              <td style="width:50%;height:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                <table style="width:100%;height:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                        Company Name
                      </b>
                    </td>
                    <td style="width:70%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                        ${object.user_id.partner_id.company_name}
                      </n>
                    </td>
                  </tr>
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                        Company Address
                      </b>
                    </td>
                    <td style="width:70%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                        ${object.user_id.partner_id.street} , 
                        ${object.user_id.partner_id.city} , 
                        ${object.user_id.partner_id.country_id.name}
                      </n>
                    </td>
                  </tr>
                </table>
              </td>
                <td style="width:50%;border: 1px solid black;border-color:#ccccb3 ! important;">
                  <table style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                        <b style="font-size:14px;">
                          Customer Name
                        </b>
                      </td>
                    <td style="width:70%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                        ${object.partner_id.name}
                      </n>
                    </td>
                  </tr>
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                        Customer Address
                      </b>
                    </td>
                    <td style="width:70%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <n style="font-size:14px;">
                        ${object.partner_id.street} , 
                        ${object.partner_id.city} , 
                        ${object.partner_id.country_id.name}
                      </n>
                    </td>
                  </tr>
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <table style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                        <td style="width:15%;border: 1px solid black;border-color:#ccccb3 ! important;">
                          <b style="font-size:14px;">
                            Phone
                          </b>
                        </td>
                        <td style="width:35%;border: 1px solid black;border-color:#ccccb3 ! important;">
                          <n style="font-size:14px;">
                            ${object.partner_id.phone}
                          </n>
                        </td>
                        <td style="width:15%;border: 1px solid black;border-color:#ccccb3 ! important;">
                          <b style="font-size:14px;">
                            Tax ID
                          </b>
                        </td>
                        <td style="width:35%;border: 1px solid black;border-color:#ccccb3 ! important;">
                          <n style="font-size:14px;">
                            ${object.partner_id.vat}
                          </n>
                        </td>
                      </tr>
                    </table>
                  </tr>
                </table>
              </td>
            </tr>
          </table>
          <br></br><br></br><br></br>

          <!-- """ end of partner information details """ -->

          <!-- """ details table """ -->

          <b style="font-size:24px;">
            Details
          </b>
          <table style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
            <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;background-color: #ccffff ! important;">
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Product
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Description
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Quantity
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Unit Price
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Taxes
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Subtotal
                </b>
              </td>
            </tr>
            % for line in object.invoice_line_ids:
              <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                  <n style="font-size:14px;">
                    ${line.product_id.name}
                  </n>
                </td>
                <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                  <n style="font-size:14px;">
                    ${line.name}
                  </n>
                </td>
                <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                  <n style="font-size:14px;">
                    ${line.quantity}
                  </n>
                </td>
                <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                  <n style="font-size:14px;">
                    ${line.price_unit}
                  </n>
                </td>
                <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                  % if line.tax_ids
                    <n style="font-size:14px;">
                      ${line.tax_ids.name}
                    </n>
                  % endif
                </td>
                <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                  <n style="font-size:14px;">
                    ${line.price_subtotal}
                  </n>
                </td>
              </tr>
            % endfor
          </table>
          <br></br><br></br>

          <!-- """ end details table """ -->

          <!-- """ Total Table """ -->

          <b style="font-size:24px;">
            Total
          </b>
          <table style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
            <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
              <td style="width:30%;border: 1px solid black;border-color:#ccccb3 ! important;">
                <table style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <td style="width:6%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                        Untaxed Amount
                      </b>
                    </td>
                    <td style="width:40%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      ${object.amount_untaxed}
                    </td>
                  </tr>
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <td style="width:60%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                        Taxes
                      </b>
                    </td>
                    <td style="width:40%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      ${object.amount_tax}
                    </td>
                  </tr>
                  <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;">
                    <td style="width:60%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      <b style="font-size:14px;">
                        Total
                      </b>
                    </td>
                    <td style="width:40%;border: 1px solid black;border-color:#ccccb3 ! important;">
                      ${object.amount_total}
                    </td>
                  </tr>
                </table>
              </td>
              <td style="width:70%;border: 1px solid black;border-color:#ccccb3 ! important;">
                <table>
                  <tr>
                    <td>
                      <b style="font-size:14px;">
                        Note
                      </b>
                      <br></br>
                      ${object.note}
                    </td>
                  </tr>
                </table>
              </td>
            </tr>
          </table>

          <!-- """ End OF Total Table """ -->

        </div>
      </field>
    </record>
  </data>
</odoo>