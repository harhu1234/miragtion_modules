<?xml version="1.0" encoding="utf-8"?>

<odoo>
	<data>	
  		<record id="sh_sale_price_history_res_config_settings" model="ir.ui.view">
			<field name="name">Sales Price History Res Config Settings</field>
			<field name="model">res.config.settings</field>
			<field name="inherit_id" ref="sale.res_config_settings_view_form"/>			
			<field name="arch" type="xml">		
				
				<xpath expr="//div[@data-key='sale_management']" position="inside">
					<h2>Sales Price History</h2>
					<div class="row mt16 o_settings_container">
					
						<div class="col-xs-12 col-md-6 o_setting_box" >
	                    	<div class="o_setting_left_pane">
	                        </div>
	                        <div class="o_setting_right_pane">
		                        <label for="item_limit"/>
	                            <div class="text-muted">
	    	                        Number of items display in product sale price history
			                    	<field name="item_limit"/>
	                            </div>
	                        </div>
	                    </div>
	                    
						<div class="col-xs-12 col-md-6 o_setting_box" >
	                    	<div class="o_setting_left_pane">
	                        </div>
	                        <div class="o_setting_right_pane">
		                        <label for="record_based_on"/>
	                            <div class="text-muted">
	    	                        Sale order product price history based on
	                            </div>
 								<div class="content-group">
                                    <div class="mt16">	              
			                    		<field name="record_based_on" widget="radio" options="{'horizontal':true}"/>
	                            	</div>
								</div>	                            	
	                        </div>
	                    </div>
	                    
                    </div>
				</xpath>
				
			</field>
		</record>
	</data>		
</odoo>
		
