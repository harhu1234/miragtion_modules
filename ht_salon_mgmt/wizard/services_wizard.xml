<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <record id="service_wizard_form_view" model="ir.ui.view">
        <field name="name">Services Wizard Form View</field>
        <field name="model">service.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="services"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="service_report" string="Report" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_services_view" model="ir.actions.act_window">
        <field name="name">Service Wizard</field>
        <field name="res_model">service.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="service_wizard_form_view"/>
        <field name="target">new</field>
    </record>
</odoo>