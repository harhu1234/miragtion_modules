<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <!-- Schedule Activity form  view -->
	<record id="schedule_activity_form_view" model="ir.ui.view">
		<field name="name">Schedule Activity Form</field>
        <field name="model">schedule.auto.activity</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="due_day"/>
                            <field name="code"/>
                            <field name="is_mandatory"/>
                        </group>
                        <group>
                            <field name="activity_type_id" required="1"/>
                            <field name="activity_name" invisible="1"/>
                            <field name="how"
                                   attrs="{'invisible':['|',('activity_name','!=','Email'),
                                   ('activity_name','=',False)]}"/>
                            <field name="stage_id"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Schdule Activity list view -->
    <record id="schedule_activity_tree_view" model="ir.ui.view">
    	<field name="name">Schedule Activity</field>
    	<field name="model">schedule.auto.activity</field>
    	<field name="arch" type="xml">
    		<tree>
    			<field name="name"/>
    			<field name="due_day"/>
                <field name="activity_type_id"/>
                <field name="code"/>
    		</tree>
    	</field>
    </record>

    <record id="schedule_activity_search_view" model="ir.ui.view">
    	<field name="name">Schedule Activity search</field>
    	<field name="model">schedule.auto.activity</field>
    	<field name="arch" type="xml">
            <search string="student search">
                <field name="name"/>
                <field name="due_day"/>
                <group expand="1" string="name..">
                    <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}"/>
                </group>
                <group expand="1" string="Due Day..">
                    <filter name="due_day" string="Due Day" domain="[]" context="{'group_by':'due_day'}"/>
                </group>
            </search>
        </field>
    </record>           
       

    <record id="action_schedule_activity" model="ir.actions.act_window">
        <field name="name">Schedule Activity Info</field>
        <field name="res_model">schedule.auto.activity</field>
        <field name="view_mode">tree,form,search</field>
    </record>		

    <menuitem id="menu_ideas_sub" name="Schedule Auto Activity" parent="crm.crm_menu_config" action="action_schedule_activity"/>


	<record id="application_schedule_activity_form_view" model="ir.ui.view">
	<field name="name">Application Schedule Activity Form</field>
        <field name="model">schedule.activity.application</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                    	<field name="name" required="1"/>
                    	<field name="due_day" required="1"/>
                    	<field name="stage_id" required="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="application_schedule_activity_list_view" model="ir.ui.view">
    	<field name="name">Application Schedule Activity</field>
    	<field name="model">schedule.activity.application</field>
    	<field name="arch" type="xml">
    		<tree>
    			<field name="name"/>
    			<field name="due_day"/>
    			<field name="stage_id"/>
    		</tree>
    	</field>
    </record>

    <record id="schedule_application_activity_search_view" model="ir.ui.view">
    	<field name="name">Application Schedule Activity search</field>
    	<field name="model">schedule.activity.application</field>
    	<field name="arch" type="xml">
            <search string="student search">
                <field name="name"/>
                <field name="due_day"/>
                <group expand="1" string="name..">
                    <filter name="name" string="Name" domain="[]" context="{'group_by':'name'}"/>
                </group>
                <group expand="1" string="Due Day..">
                    <filter name="due_day" string="Due Day" domain="[]" context="{'group_by':'due_day'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_schedule_activity_application" model="ir.actions.act_window">
        <field name="name">Application Schedule Activity Info</field>
        <field name="res_model">schedule.activity.application</field>
        <field name="view_mode">tree,form,search</field>
    </record>

    <menuitem id="menu_sch_application_activity" name="Schedule Auto Activity"
              parent="hr_recruitment.menu_hr_recruitment_configuration" action="action_schedule_activity_application"/>
    
</odoo>
