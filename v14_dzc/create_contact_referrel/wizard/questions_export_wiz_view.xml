<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Export Wizard Form View -->
    <record id="export_questions_view" model="ir.ui.view">
        <field name="name">Report Last Two Questions</field>
        <field name="model">questions.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Report Last Two Questions">
                <field name="state" invisible="1" />
                <div states="choose">
                    <group>
                        <span> Are you sure, you want Report for Last Two questions?</span>
                    </group>
                </div>
                <div states="get">
                    <group>
                        <field name="name" colspan="4" invisible="1"/>
                        <field name="report" filename="name" colspan="4"/>
                    </group>
                </div>
                 <footer states="choose">
                    <button name="export_data" string="Print"
                        type="object" class="oe_highlight" />
                    <span> Or </span>
                    <button string="Cancel" class="oe_link oe_highlight" special="cancel" />
                 </footer>
                 <footer states="get">
                        <button string="Cancel" class="oe_link oe_highlight" special="cancel" />
                 </footer>
            </form>
        </field>
    </record>

</odoo>