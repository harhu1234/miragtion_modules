<?xml version="1.0" encoding="UTF-8"?>
<odoo>

	<template id="report_information_det">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<t t-foreach="docs" t-as="doc">
					
					<div class="page">

						<div class="row">
							<div class="col-3">
								<img src="/student_details/static/src/img/to.jpg" style="margin-bottom:20px;margin-left:20px;height:80px; width:80px;" alt="Logo"/>
							</div>
							<div class="col-3" >
								<center><h3>Student Details</h3></center>
							</div>
							<div class="col-6">
								<!-- <img alt='Barcode' t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128',quote_plus(doc.barcode or ''), 600, 150)" style="width:100%;height::4rem;"/> -->

								<img alt="Barcode" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(doc.student_code or ''), 600, 150)" style="width:100%;height:4rem"/>
                                <center>
                                <span t-field="doc.student_code"/>
                            	</center>
								<!-- <span t-field="doc.scheduled_date.strftime('%Y-%m-%d')" t-option="{'widget : datetime}"/> -->
								<span style="margin-left:60px;" t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
							</div>
						</div>
						<div class="row">
							<table class="table">
								<thead>
									<th name="th_name">Student Name</th>
									<th name="th_defualt_code">Internal Referance</th>
									<th name="th_data">Department Name</th>
								</thead>
								<tbody>
									<td><span t-field="doc.name"/></td>
									<td><span t-field="doc.student_code"/></td>
									<td><span t-field="doc.department_id.name"/></td>
								</tbody>
							</table>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>



	<template id="report_information_department">
		<t t-call="web.html_container">
			<t t-call="web.external_layout">
				<t t-foreach="docs" t-as="doc">
					
					<div class="page">

						<div class="row">
							<div class="col-3">
								<img src="/student_details/static/src/img/to.jpg" style="margin-bottom:20px;margin-left:20px;height:80px; width:80px;" alt="Logo"/>
							</div>
							<div class="col-5" >
								<center><h3>Department Details</h3></center>
							</div>
							<div class="col-3">
								<!-- <span t-field="doc.scheduled_date.strftime('%Y-%m-%d')" t-option="{'widget : datetime}"/> -->
							<span style="margin-left:60px;" t-esc="datetime.datetime.now().strftime('%Y-%m-%d')"/>
							</div>
						</div>
						<div class="row">
							<table class="table">
								<thead>
									<th name="th_name">Department Name</th>
									<th name="th_name">Project Name</th>
									<th name="th_desc">Description</th>
								</thead>
								<tbody t-foreach="doc.project_ids" t-as="over">
									<td><span t-field="over.department_id.name"/></td>
									<td><span t-field="over.name"/></td>
									<td><span t-field="over.desc"/></td>
								</tbody>
							</table>
						</div>
					</div>
				</t>
			</t>
		</t>
	</template>

<template id="report_information">
	<t t-call="web.html_container">
		<t t-foreach="docs" t-as="doc">
			<t t-call="student_details.report_information_det"/>
		</t>
	</t>
</template>
