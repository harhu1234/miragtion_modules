<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        <record id="product_sale_price_history_form_view" model="ir.ui.view">
            <field name="name">sale.customer.product.price.history.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='sales']" position="after">
                    <page string="Sales Price History">
                        <field name="price_history_line_ids">
                            <tree string="Price Histroy" editable="bottom">
                                <field name="partner_id" string="Customer"/>
                                <field name="variant_id"/> 
                                <field name="sales_person_id"/>
                                <field name="sale_order_id"/>   
                                <field name="order_date"/>  
                                <field name="quantity"/>                            
                                <field name="sale_price"/>
                                <field name="total_price"/>
                            </tree>
                            <form string="Sale Price History Line">
                                <sheet>
                                    <group>
                                        <group>
                                            <field name="partner_id" string="Customer"/> 
                                            <field name="sale_order_id"/>   
                                            <field name="variant_id"/>  
                                            <field name="sale_price"/>                          
                                        </group>
                                        <group>
                                            <field name="sales_person_id"/> 
                                            <field name="order_date"/>                          
                                            <field name="quantity"/>
                                            <field name="total_price"/>
                                        </group>
                                    </group>
                                </sheet>
                            </form>
                        </field>
                    </page>                 
 
                </xpath> 
            </field>
        </record>
        
    </data> 
</odoo>