<odoo>
	<data >
		<record id="purchase_O_Q_temp_2_template" model="ssc.create.template">
			<field name="name">Purchase O/Q Modern Template (1)</field>
      <field name="sample_template">True</field>
      <field name="sample_image" type="base64" file="ht_pdf_report_creator/static/src/img/icon_17.png"/>
			<field model="ir.model" name="model_id" search="[('model', '=', 'purchase.order')]"/>
			<field name="body" type="html">
				<div width="100%" >

					<!-- """ partner information details """ -->

					<center>
						% if object.state == 'draft'
              <b style="font-size:40px;color:#006666;text-transform: uppercase;">
              	<u>
                	Purchase Quotation
                </u>
              </b>
              % endif
              % if object.state != 'draft'
              <b style="font-size:40px;color:#006666;text-transform: uppercase;">
              	<u>
                	Purchase Order
                </u>
              </b>
              % endif
					</center>
					<br></br><br></br>

					<!-- """ Vendor Info """ -->

					<b style="font-size:22px;color:#009999;">
            Vendor Info
          </b>
					<table style="width:65%;">
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Name : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Address : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.street} , 
                  ${object.partner_id.city} , 
                  ${object.partner_id.country_id.name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Phone : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.phone}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Email : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.partner_id.email}
                </n>
              </td>
            </tr>
          </table>
          <br></br><br></br>

          <!-- """ End Of Vendor Info """ -->

          <!-- """ Shipping Info """ -->

          <b style="font-size:22px;color:#009999;">
            Shipping To Address
          </b>
          <table style="width:65%;">
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Name : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.user_id.partner_id.company_name}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:16px;">
                  Address : 
                </b>
              </td>
              <td style="width:80%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.user_id.partner_id.street} , 
                  ${object.user_id.partner_id.city} , 
                  ${object.user_id.partner_id.country_id.name}
                </n>
              </td>
            </tr>
          </table>
          <br></br><br></br><br></br>

          <!-- """ End Of Shipping Info """ -->

          <!-- """ details table """ -->

          <b style="font-size:22px;color:#009999;">
            Products Details
          </b>
          <table style="width:100%;">
            <tr style="width:100%;border: 1px solid black;border-color:#ccccb3 ! important;background-color: #eaeae1 ! important;">
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Product
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Description
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Quantity
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Unit Price
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Taxes
                </b>
              </td>
              <td style="border: 1px solid black;border-color:#ccccb3 ! important;">
                <b style="font-size:14px;">
                  Subtotal
                </b>
              </td>
            </tr>
            % for line in object.order_line:
              <tr style="width:100%;border-bottom: 1px solid black;border-color:#ccccb3 ! important;">
                <td>
                  <n style="font-size:14px;">
                    ${line.product_id.name}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.name}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.product_uom_qty}
                  </n>
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.price_unit}
                  </n>
                </td>
                <td>
                  % if line.taxes_id
                    <n style="font-size:14px;">
                      ${line.taxes_id.name}
                    </n>
                  % endif
                </td>
                <td>
                  <n style="font-size:14px;">
                    ${line.price_subtotal}
                  </n>
                </td>
              </tr>
            % endfor
          </table>
          <br></br><br></br><br></br>

          <!-- """ end details table """ -->

          <!-- """ Total Info """ -->

          <table style="width:35%;float:right;">
          	<tr style="width:100%;">
              <td style="width:20%;">
                <b style="font-size:22px;color:#009999;">
                  Total
                </b>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:60%;">
                <b style="font-size:16px;">
                  Untaxed Amount : 
                </b>
              </td>
              <td style="width:40%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.amount_untaxed}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:30%;">
                <b style="font-size:16px;">
                  Taxes : 
                </b>
              </td>
              <td style="width:70%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.amount_tax}
                </n>
              </td>
            </tr>
            <tr style="width:100%;">
              <td style="width:30%;">
                <b style="font-size:16px;">
                  Total : 
                </b>
              </td>
              <td style="width:70%;border-bottom: 2px solid black;border-color:#ccccb3 ! important;">
                <n style="font-size:16px;">
                  ${object.amount_total}
                </n>
              </td>
            </tr>
          </table>

				</div>
			</field>
		</record>
	</data>
</odoo>