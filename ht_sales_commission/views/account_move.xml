<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="account_move_inherit_view_form" model="ir.ui.view">
        <field name="name">account.move.inherit.view.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="invoice_vendor_bill_id" position = "after">
                <field name="target_commission_id" invisible="1"/>
            </field>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button 
                    type="object"
                    name = "open_commissions"
                    class="oe_stat_button"
                    icon="fa-money"
                    attrs="{'invisible':[('commission_count','=',0)]}"     >    
                    <field name = "commission_count" string = "Commission" widget="statinfo"/>   
                </button>
            </xpath>
        </field>
        
    </record>
</odoo>
