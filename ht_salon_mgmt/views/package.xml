<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="pacakge_kanban_view" model="ir.ui.view">
            <field name="name">pacakge.pacakge.kanban</field>
            <field name="model">pacakge.package</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_global_click">
                                <div class="oe_kanban_details">
                                    <strong class="o_kanban_record_title">
                                    Name : <field name="name"/><br/>
                                    Package : <field name="package_type"/><br/>
                                    <field name="discount"/>
                                    </strong>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>
        <record id="pacakge_search_view" model="ir.ui.view">
            <field name="name">pacakge.pacakge.search</field>
            <field name="model">pacakge.package</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="package_type"/>
                    <filter string="Silver" name="silver" domain="[('package_type', '=','silver')]"/>
                    <filter string="Gold" name="gold" domain="[('package_type', '=','gold')]"/>
                    <filter string="Dimond" name="dimond" domain="[('package_type', '=','dimond')]"/>
                    <filter string="Platanium" name="platanium" domain="[('package_type', '=','platanium')]"/>
                    <group>
                        <filter string="Type" name="group_type" context="{'group_by':'package_type'}"/>
                    </group>
                </search>
            </field>
        </record>
        <record id="pacakge_form_view" model="ir.ui.view">
            <field name="name">pacakge.pacakge.form.view</field>
            <field name="model">pacakge.package</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name" placeholder="Name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="package_type"/>
                                <field name="regular_price" readonly="1"/>
                                <field name="package_price" readonly="1"/>
                            </group>
                            <group>
                                <field name="description"/>
                                <field name="discount"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Services">
                                <field name="line_ids">
                                    <tree editable="bottom">
                                        <field name="service_id"/>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="price"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="pacakge_tree_view" model="ir.ui.view">
            <field name="name">pacakge.pacakge.tree.view</field>
            <field name="model">pacakge.package</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="discount"/>
                    <field name="regular_price"/>
                    <field name="package_type"/>
                    <field name="package_price"/>
                </tree>
            </field>
        </record>
        <record id="action_pacakge_view" model="ir.actions.act_window">
            <field name="name">Package</field>
            <field name="res_model">pacakge.package</field>
            <field name="view_mode">kanban,tree,form</field>
        </record>
    </data>
</odoo>