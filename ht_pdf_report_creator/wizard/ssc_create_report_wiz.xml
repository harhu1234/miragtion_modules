<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- inherite wizard form view -->

    <record  id="email_compose_message_wizard_form_inh" model="ir.ui.view">
        <field name="name">mail.compose.message.form.inh</field>
        <field name="model">mail.compose.message</field>
        <field name="inherit_id" ref="mail.email_compose_message_wizard_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@class='btn-secondary']" position="before">
                <button type="object" name="print_pdf_created_report" string="Print" 
                    class="btn-primary o_mail_send"/>
            </xpath>
            <xpath expr="//field[@name='subject']" position="after">
                <field name="check_value" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='partner_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='email_from']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='subject']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='template_id']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//field[@name='attachment_ids']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@class='btn-primary o_mail_send']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@class='float-right btn-secondary']" position="attributes">
                <attribute name="attrs">{'invisible': [('check_value', '=', True)]}</attribute>
            </xpath>
            <xpath expr="//button[@class='btn-primary']" position="replace">
                <button string="Log" attrs="{'invisible': [('check_value', '=', True)]}" name="action_send_mail" type="object" class="btn-primary"/>
            </xpath>
        </field>
    </record>

    <!-- end of inherite wizard form view -->
    <!-- ____________________________________________________________________________________________________________ -->

</odoo>