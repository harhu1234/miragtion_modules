<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="sale_order_invoice_policy_view" model="ir.ui.view">
		<field name="name">sale.order.invoice.policy.view</field>
		<field name="model">sale.order</field>
		<field name="inherit_id" ref="sale.view_order_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='payment_term_id']" position="after">
				<field name="invoice_policy_change" widget='boolean_toggle'/>
			</xpath>
		</field>
	</record>
</odoo>