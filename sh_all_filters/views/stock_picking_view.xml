<!-- Stock Operations filters -->
<record id="sh_inherit_view_picking_internal_search" model="ir.ui.view">
	<field name="name">sh.inherit.view.picking.internal.search</field>
	<field name="model">stock.picking</field>
	<field name="inherit_id" ref="stock.view_picking_internal_search"/>
	<field name="arch" type="xml">
	
			<xpath expr="//filter" position="before">

				
				<filter string="Today" name="today" 
					domain="[('scheduled_date', '&gt;=', datetime.datetime.now().strftime('%m/%d/%Y 00:00:00')),('scheduled_date', '&lt;=', datetime.datetime.now().strftime('%m/%d/%Y 23:23:59'))]"/>
			
			     <filter string="Yesterday"  name="Yesterday" 
                         domain="[('scheduled_date','&gt;=', ((context_today()+datetime.timedelta(days=-1)).strftime('%Y-%m-%d'))), ('scheduled_date','&lt;=', ((context_today()+datetime.timedelta(days=-1)).strftime('%Y-%m-%d')))]"
                           help="Yesterday"/>				

				<filter 
			        string="Current Week"
			        name="this_week"
			        domain="[('scheduled_date', '&gt;=', ((context_today()+ relativedelta(weeks=-1,weekday=0)).strftime('%Y-%m-%d'))), ('scheduled_date', '&lt;=', ((context_today()+ relativedelta(weeks=-1,days=5,weekday=6)).strftime('%Y-%m-%d')))]"
			       /> 				

				
				<filter string="Previous Week" name="prev_week"
				domain="[('scheduled_date', '&gt;=', ((context_today()+relativedelta(weeks=-2, weekday=0)).strftime('%Y-%m-%d'))),('scheduled_date', '&lt;=', ((context_today()+relativedelta(weeks=-1,weekday=6)).strftime('%Y-%m-%d')))]"/>
	
				<filter string="Current Month" name="this_month" 
				domain="[('scheduled_date','&lt;',(context_today()+relativedelta(months=1)).strftime('%%Y-%%m-01')), ('scheduled_date','&gt;=',time.strftime('%%Y-%%m-01'))]"/>				
	
				<filter string="Previous Month" name="prev_month" domain="[('scheduled_date','&gt;=',(context_today()-relativedelta(months=1)).strftime('%%Y-%%m-01')),('scheduled_date','&lt;',time.strftime('%%Y-%%m-01'))]"/>

			    <filter string="Current Year" name="year" domain="[('scheduled_date','&lt;=', time.strftime('%%Y-12-31')),('scheduled_date','&gt;=',time.strftime('%%Y-01-01'))]"/>

				<filter string="Previous Year" name="previous_year" domain="[('scheduled_date', '&gt;=' ,(context_today()-relativedelta(years=1)).strftime('%Y-01-01')),('scheduled_date','&lt;=',time.strftime('%Y-01-01'))]" help="last year"/>

			
			</xpath>	
			
			 <xpath expr="//group" position="inside">
                  <filter string="Day" name="day" domain="[]" context="{'group_by':'scheduled_date:day'}"/>		
                  <filter string="Week" name="week" domain="[]" context="{'group_by':'scheduled_date:week'}"/>		 
                  <filter string="Month" name="month" domain="[]" context="{'group_by':'scheduled_date:month'}"/>
                  <filter string="Year" name="year" domain="[]" context="{'group_by':'scheduled_date:year'}"/>                                                       
			 </xpath>					
	
	</field>
</record>
	
