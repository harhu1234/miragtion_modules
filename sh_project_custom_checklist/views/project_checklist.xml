<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
	
		<record id="sh_project_project_custom_checklist_form_view_inherit" model ="ir.ui.view">
			<field name="name">project.project.custom.checklist.form</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.edit_project"/>
			<field name="arch" type="xml">
				<xpath expr="//notebook" position="inside">
					<page name="custom_checklist" string="Checklist" >
 						<field name="custom_checklist" string="Checklist Completed" widget="percentpie" style="height:30px;background:White;"/>
						<field name="custom_checklist_ids">
							<tree editable="bottom">
								<field name="name"/>
								<field name="description"/>
								<field name="updated_date"/>
								<field name="state"/>																
								<button string="Complete" name="btn_check" type="object" icon="fa fa-check" attrs="{'invisible':[('state','=','completed')]}" />
								<button string="Cancel" name="btn_close" type="object" icon="fa fa-close" attrs="{'invisible':[('state','=','cancelled')]}"/>
 							</tree>
						</field>
					</page>
				</xpath>
			</field>
		</record>
				
  		<record id="sh_project_project_custom_checklist_tree_view_inherit" model="ir.ui.view">
			<field name="name">project.project.custom.checklist.tree</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.view_project"/>
			<field name="arch" type="xml">
				<field name="user_id" position="after">
					<field name="custom_checklist" widget="progressbar"/>
				</field>
			</field>
		</record>

		<record id="sh_project_project_custom_checklist_kanban_view_inherit" model="ir.ui.view">
			<field name="name">project.project.custom.checklist.kanban</field>
			<field name="model">project.project</field>
			<field name="inherit_id" ref="project.view_project_kanban"/>
			<field name="arch" type="xml">
				<field name="partner_id" position="after">
					<br/>					
					<field name="custom_checklist" string="Checklist" widget="percentpie" style="background:Blue;"/>
				</field>
			</field>	
		</record>
		
		<record id="sh_project_custom_checklist_form_view" model="ir.ui.view">
			<field name="name">project.custom.checklist.form</field>
			<field name="model">project.custom.checklist</field>
			<field name="arch" type="xml">
				<form>
					<sheet>
						<group>
							<group>
								<field name="name"/>							
							</group>
							<group>
								<field name="description"/>							
							</group>
						</group>
					</sheet>
				</form>				
			</field>	
		</record>

		<record id="sh_project_custom_checklist_tree_view" model="ir.ui.view">
			<field name="name">project.custom.checklist.tree</field>
			<field name="model">project.custom.checklist</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>							
					<field name="description"/>							
				</tree>				
			</field>	
		</record>
		
        <record model="ir.actions.act_window" id="action_menu_project_custom_checklist">
            <field name="name">Project Custom Checklist</field>            
            <field name="res_model">project.custom.checklist</field>
            <field name="view_mode">tree,form</field>
       </record>		

	</data>	
	
    <menuitem id ="menu_project_custom_checklist" name="Project Custom Checklist" action="action_menu_project_custom_checklist" parent="project.menu_project_config"/> 
</odoo>
